<div id="page-content-wrapper">
    <h3>SHOP MANAGER DASHBOARD</h3>
    <!-- #TODO: Shop Manager Summary -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
            <div class="table-responsive">
          <!--     <%= link_to 'Add product', new_shop_product_path(@shop), class: 'btn btn-primary' %> -->

              <table class="table table-striped table-condensed">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                  </tr>
                </thead>
                <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td><%= product.product_name %></td>
                    <td><%= product.product_description %></td>
                    <td><%= product.product_price %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <%= yield :dashboard %>
            </div>
        </div>
    </div>
</div>
