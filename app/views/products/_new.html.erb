
<% content_for :dashboard do %>
<div class="col-md-6 col-md-offset-3">
  <h1>Add product for #Shop</h1>
  <%= form_for @product do |f| %>
  <%= hidden_field_tag(:shop_id, @shop_id) %>

  <div class="form-group">
    <%= f.label "Name " %>
    <%= f.text_field :product_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Description " %>
    <%= f.text_field :product_description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Picture " %>
    <%= f.text_field :product_image, class: 'form-control' %>
  </div>
   <div class="form-group">
    <%= f.label "Quantity " %>
    <%= f.number_field :product_quantity, in: 1..100, class: 'form-control' %>
  </div>
   <div class="form-group">
    <%= f.label "Price " %>
    <%= f.number_field :product_price, class: 'form-control' %>
  </div>
   <div class="form-group">
    <%= f.label "Deal Price " %>
    <%= f.number_field :product_deal_price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.button 'Save', class: 'btn btn-positive' %>
  </div>
  <% end %>
</div>
<% end %>
